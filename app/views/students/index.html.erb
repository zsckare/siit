<div class="row">
  <div class="col s12 m12 l12">
    <div class="row">
      <h3 class="center-align">Lista de Alumnos</h3>
    </div>

    <div class="row">
      <table class="table striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Lastname</th>
              <th>Nocontrol</th>
              <th>Password</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.lastname %></td>
                <td><%= student.nocontrol %></td>
                <td>
                  <%= link_to 'Ver', student , class: 'btn'%>
                  <%= link_to 'Editar', edit_student_path(student), class: 'btn' %>
                  <%= link_to 'Eliminar', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn '%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="row">
      <%= link_to 'Agregar Alumno', new_student_path, class: 'btn blue' %>

    </div>
  </div>
</div>